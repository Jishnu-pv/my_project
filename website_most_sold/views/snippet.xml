<odoo>
    <template id="snippet_testimonial" name="Features">
        <section class="snippet_testimonial">
            <div class="container">

                <div class="row">
                    <h3 class="text-center mb32">Most Sold Products</h3>

                </div>
                <div>
                    <div class="row o_wsale_products_main_row">


                        <!--                           <a t-att-href="keep('/shop' + slug(c), category=0)">-->


                        <t t-set="datas"
                           t-value="request.env['product.template'].sudo().search([], order='sales_count desc', limit=4)"></t>

                        <table class="table table-borderless m-0" data-ppg="20"
                               data-ppr="4">

                            <tr>
                                <td t-foreach="datas" t-as="data"
