                                            <center>
                                                <span t-field="data.name"/>
                                            <br/>
                                                <span class="oe_currency_value"
                                                      t-field="data.list_price"/>
                                            </center>
                                        </h5>

                                    </a>

                                </td>
                            </tr>

                        </table>


                    </div>
