<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record model="ir.ui.view" id="spanish_form_view">
              <field name="name">product.dob</field>
              <field name="model">product.template</field>
              <field name="inherit_id" ref="product.product_template_only_form_view"/>
              <field name="arch" type="xml">
                    <xpath expr="//field[@name='categ_id']" position="after">
                        <field name="spanish_name" string="Spanish Name"/>
                    </xpath>
              </field>

    </record>


    <record model="ir.ui.view" id="credit_limit_form_view">
              <field name="name">product.limit</field>
              <field name="model">res.partner</field>
              <field name="inherit_id" ref="base.view_partner_form"/>
              <field name="arch" type="xml">
                    <xpath expr="//field[@name='dob']" position="after">
                        <field name="due_limit" string="Blocking Amount"/>
                    </xpath>
              </field>

    </record>






</odoo>